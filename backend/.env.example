# Alfanio LTD - Environment Variables Example
# Copy this file to .env and fill in the values for your environment

# Node Environment
# Set to 'production' in production environment
NODE_ENV=production
PORT=5001
HOST=0.0.0.0

# MongoDB Configuration
# For local development
# MONGODB_URI=mongodb://localhost:27017/alfanio

# For production with MongoDB Atlas
MONGO_USERNAME=your_atlas_username
MONGO_PASSWORD=your_atlas_password
MONGO_CLUSTER=your_atlas_cluster.mongodb.net
MONGO_DB_NAME=alfanio

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM_NAME=Alfanio India
EMAIL_TO=recipient@example.com

# Security
# Generate a random string for CSRF protection
CSRF_SECRET=generate_a_random_string_here

# Client URL for CORS
CLIENT_URL=https://your-production-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# Logging
LOG_LEVEL=info  # Options: error, warn, info, debug

# Production-specific settings
# Uncomment and set these in production
# SSL_KEY_PATH=/path/to/ssl/key.pem
# SSL_CERT_PATH=/path/to/ssl/cert.pem
